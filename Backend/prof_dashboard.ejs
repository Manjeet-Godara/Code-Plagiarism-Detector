<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="prof_base.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professor Dashboard</title>
</head>
<body>
    <div id="header">
        <h1>Professor Dashboard</h1>
    </div>
    <div id="top_bar">
        <div id="name_tl">
            <%= professor.name %>
        </div> 
        <button id="cs_btn" onclick="window.location.href='/professor/<%= professor._id %>/create_space'">Create space</button>
    </div>
    <div id="table">
        <table id="profTable" border="1">
            <thead>
                <tr>
                    <th>Sr. no.</th>
                    <th>Start Time</th>
                    <th>Space Name</th>
                    <th>Description</th>
                    <th>Number of Students</th>
                    <th>Action</th>
                    <th>Link</th>
                </tr>
            </thead>
            <tbody>
                <% spaces.forEach(function(space, idx) { %>
                <tr>
                    <td><%= idx + 1 %></td>
                    <td>
                        <% if (space.date) { %>
                            <%= new Date(space.date).toLocaleDateString() %>
                        <% } else { %>
                            -
                        <% } %>
                    </td>
                    <td><%= space.name %></td>
                    <td><%= space.description %></td>
                    <td><%= space.numerOfStudents %></td>
                    <td>
                        <form action="/space/<%= space._id %>/view" method="get" style="display:inline;">
                            <button type="submit">View Space</button>
                        </form>
                    </td>
                    <td style="padding-left: 20px;">
                        <a href="http://localhost:8000/student_signIn/<%= space._id %>" target="_blank">
                            http://localhost:8000/student_signIn/<%= space._id %>
                        </a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
<script src="prof_base.js"></script>
<script src="space_base.js"></script> 
</body>
</html>
