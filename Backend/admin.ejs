<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flagged Users</title>
    <style>
        table {
            border-collapse: collapse;
            width: 60%;
            margin: 20px auto;
        }
        th, td {
            border: 1px solid #333;
            padding: 8px 12px;
            text-align: center;
        }
        th {
            background: #eee;
        }
    </style>
</head>
<body>
    <h2 style="text-align:center;">Flagged Users</h2>
    <table>
        <tr>
            <th>Roll No.</th>
            <th>Similarity With (Roll no.)</th>
            <th>How Much Similarity (%)</th>
            <th>Compare</th>
        </tr>
        <% users.forEach(function(user) { %>
            <tr>
                <td><%= user.user %></td>
                <td><%= user.similarity_with %></td>
                <td><%= user.similarity %></td>
                <td>
                    <form action="/compare" method="get" style="margin:0;">
                        <input type="hidden" name="roll1" value="<%= user.user %>">
                        <input type="hidden" name="roll2" value="<%= user.similarity_with %>">
                        <button type="submit">Compare</button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </table>
</body>
</html>